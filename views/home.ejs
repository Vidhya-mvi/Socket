<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Chat App</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1 class="head">Welcome to Chat App</h1>
        <div class="butn">
            <a href='/register'><button class="btn" aria-label="Register">Register</button></a>
            <a href='/login'><button class="btn" aria-label="Login">Login</button></a>
        </div>
    </div>
</body>
</html>

<style>
body {
    font-family: Arial, sans-serif;
    background: linear-gradient(0deg, #FFDEE9 0%, #B5FFFC 100%);
    text-align: center;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    overflow: hidden;
    position: relative;
}

h1 {
    color: #333;
    margin-bottom: 20px;
}

a {
    text-decoration: none;
    margin: 10px;
}

button {
    background-color: #007BFF;
    color: white;
    border: none;
    padding: 12px 24px;
    font-size: 18px;
    cursor: pointer;
    border-radius: 8px;
    transition: all 0.3s ease-in-out;
    outline: none;
}

button:hover {
    background-color: #0056b3;
    transform: scale(1.05);
}

button:focus {
    outline: 2px solid #fff;
}

.bubble {
    position: absolute;
    background-color: rgba(0, 123, 255, 0.7);
    color: white;
    padding: 15px;
    border-radius: 50%;
    font-size: 14px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    opacity: 0;
    animation: floatUp linear forwards;
}

@keyframes floatUp {
    0% {
        bottom: var(--start-bottom);
        opacity: 0;
        transform: scale(0.5);
    }
    20% {
        opacity: 1;
    }
    100% {
        bottom: 100vh;
        opacity: 0;
        transform: scale(1.2);
    }
}
</style>

<script>
document.addEventListener("DOMContentLoaded", function () {
    function createBubble() {
        const bubble = document.createElement("div");
        bubble.classList.add("bubble");
        bubble.textContent = getRandomMessage();

        const size = Math.random() * 40 + 20; 
        const startBottom = Math.random() * -50 - 10; 

        bubble.style.setProperty("--start-bottom", `${startBottom}px`);
        bubble.style.width = `${size}px`;
        bubble.style.height = `${size}px`;
        bubble.style.left = `${Math.random() * 90 + 5}%`;
        bubble.style.animationDuration = `${Math.random() * 5 + 3}s`;

        document.body.appendChild(bubble);

        bubble.addEventListener("animationend", () => {
            bubble.remove();
        });
    }

    function getRandomMessage() {
        const messages = ["Hello!", "How are you?", "Chat App!", "Let's talk!", "Welcome!", "ðŸ˜Š", "ðŸš€", "ðŸ’¬"];
        return messages[Math.floor(Math.random() * messages.length)];
    }

    setInterval(createBubble, 1200); 
});
</script>
