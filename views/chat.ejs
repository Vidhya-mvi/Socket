<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link rel="stylesheet" href="styles.css">
    <script defer src="script.js"></script>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>

<div class="container">
    <div class="sidebar">
        <h3 id="welcomeMessage">Welcome, <%= user ? user.name : 'Guest' %>!</h3>
        <h2>Chats</h2>
        <div class="search-box">
            <input type="text" id="search" placeholder="Search users or groups...">
        </div>
        <h3>Users</h3>
        <ul class="user-list" id="userList">
            <% users.forEach(user => { %>
                <li onclick="startChat('<%= user._id %>', '<%= user.name %>', false)">
                    <%= user.name %>
                </li>
            <% }) %>
        </ul>
        <h3>Groups</h3>
        <ul class="group-list" id="groupList">
            <% groups.forEach(group => { %>
                <li onclick="startChat('<%= group._id %>', '<%= group.name %>', true)">
                    <%= group.name %>
                </li>
            <% }) %>
        </ul>
        <button onclick="showCreateGroup()">+ Create Group</button>
        <div id="createGroupDiv" style="display: none;">
            <input type="text" id="groupName" placeholder="Group Name">
            <button onclick="createGroup()">Create</button>
        </div>
        <div class="logout-btn-container">
            <button class="logout-btn" onclick="logout()">Logout</button>
        </div>
    </div>
    <div class="chat-container">
        <div class="chat-header" id="chat-header">Select a chat</div>
        <div class="messages" id="messages"></div>
        <form class="chat-input" onsubmit="sendMessage(event)">
            <input type="text" id="messageInput" placeholder="Type a message..." required>
            <button type="submit">Send</button>
        </form>
    </div>
</div>

<script>
const socket = io();

let currentChatId = null;
let isGroupChat = false;
let userId = "<%- user ? user._id : '' %>";  // Ensuring userId is never undefined

console.log("User ID:", userId);  // Debugging log

document.getElementById("search").addEventListener("keyup", filterChats);

function showCreateGroup() {
    document.getElementById("createGroupDiv").style.display = "block";
}

async function createGroup() {
    const groupName = document.getElementById("groupName").value;
    if (!groupName) return alert("Enter a group name");

    try {
        const response = await fetch("/group/create", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ chatName: groupName, users: [userId] })
        });

        const group = await response.json();
        if (!group._id) throw new Error("Group creation failed!");

        const groupList = document.getElementById("groupList");
        let newGroup = document.createElement("li");
        newGroup.innerText = group.name;
        newGroup.onclick = () => startChat(group._id, group.name, true);
        groupList.appendChild(newGroup);

        document.getElementById("groupName").value = "";
        document.getElementById("createGroupDiv").style.display = "none";
    } catch (error) {
        console.error("Error creating group:", error);
    }
}

async function startChat(chatId, chatName, group) {
    if (!chatId) {
        console.error("❌ No chat ID provided!");
        return;
    }

    document.getElementById("chat-header").innerText = "Chat with " + chatName;
    document.getElementById("messages").innerHTML = "";
    currentChatId = chatId;
    isGroupChat = group;

    try {
        const response = await fetch(`/${group ? 'group' : 'chat'}/${chatId}/messages`);
        const messages = await response.json();
        messages.forEach(msg => appendMessage(msg.content, msg.sender._id === userId ? "sent" : "received"));
        socket.emit("joinChat", { chatId: currentChatId, userId });
    } catch (error) {
        console.error("Error loading chat:", error);
    }
}

function sendMessage(event) {
    event.preventDefault();
    const message = document.getElementById("messageInput").value;

    if (!currentChatId || !userId) {
        console.error("❌ Chat ID or User ID missing! Cannot send message.");
        return alert("Select a chat first or re-login.");
    }

    fetch(`/${isGroupChat ? 'group' : 'chat'}/message`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ chatId: currentChatId, content: message })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            appendMessage(message, "sent");
            document.getElementById("messageInput").value = "";
        }
    })
    .catch(error => console.error("Error:", error));

    socket.emit("sendMessage", { chatId: currentChatId, senderId: userId, content: message, isGroup: isGroupChat });
}

function appendMessage(content, type) {
    const messageElement = document.createElement("div");
    messageElement.classList.add("message", type);
    messageElement.innerText = content;
    document.getElementById("messages").appendChild(messageElement);
}

socket.on("receiveMessage", (data) => {
    console.log("🔹 New message received:", data);
    if (data.chatId === currentChatId) appendMessage(data.content, data.senderId === userId ? "sent" : "received");
});

function logout() {
    fetch('/logout', { method: 'GET' })
        .then(() => window.location.href = "/login")
        .catch(err => console.error("Logout failed:", err));
}

function filterChats() {
    const searchQuery = document.getElementById("search").value.toLowerCase();

    // Filter Users
    document.querySelectorAll(".user-list li").forEach(user => {
        const name = user.innerText.toLowerCase();
        user.style.display = name.includes(searchQuery) ? "block" : "none";
    });

    // Filter Groups
    document.querySelectorAll(".group-list li").forEach(group => {
        const name = group.innerText.toLowerCase();
        group.style.display = name.includes(searchQuery) ? "block" : "none";
    });
}

</script>

</body>
</html>



